<UserControl x:Class="ReactiveUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Canvas Background="MediumAquamarine">           
        <Button x:Name="NonRxButton" 
                Content="Non Rx" 
                Height="20" 
                Width="75" 
                Canvas.Left="25" 
                Canvas.Top="20" 
                Click="NonRxButtonClick">
        </Button>
        <Button 
                x:Name="RxButton" 
                Content="Rx" 
                Height="20" 
                Width="75" 
                Canvas.Left="105" 
                Canvas.Top="20"
                Click="RxButtonClick">            
        </Button>
        <Button 
                x:Name="RxWithSchedulerButton" 
                Content="Rx With Scheduler" 
                Height="20" 
                Width="115" 
                Canvas.Left="190" 
                Canvas.Top="20"
                Click="RxWithSchedulerClick">
        </Button>
        <ComboBox 
                x:Name="MyComboBox"  
                Canvas.Left="25" 
                Canvas.Top="50" 
                Width="100" 
                Height="25">
        </ComboBox>
    </Canvas>
</UserControl>
